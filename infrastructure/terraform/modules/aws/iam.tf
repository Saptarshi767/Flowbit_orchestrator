# Additional policies for orchestrator functionality
resource "aws_iam_policy" "orchestrator_s3_policy" {
  name        = "${var.environment}-orchestrator-s3-policy"
  description = "Policy for orchestrator S3 access"

  policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Effect = "Allow"
        Action = [
          "s3:GetObject",
          "s3:PutObject",
          "s3:DeleteObject",
          "s3:ListBucket"
        ]
        Resource = [
          aws_s3_bucket.main.arn,
          "${aws_s3_bucket.main.arn}/*"
        ]
      }
    ]
  })

  tags = var.common_tags
}

resource "aws_iam_role_policy_attachment" "eks_node_group_s3_policy" {
  policy_arn = aws_iam_policy.orchestrator_s3_policy.arn
  role       = aws_iam_role.eks_node_group.name
}

